# Multi-Database Agent Configuration
# Copy this file to .env and replace with your actual connection strings

# Google ADK Configuration
GOOGLE_GENAI_USE_VERTEXAI=FALSE
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CLOUD_PROJECT=your_gcp_project_id
GOOGLE_CLOUD_LOCATION=us-central1

# MongoDB Connection Configuration (Database A & B)
# Get this from your MongoDB Atlas cluster connection string
# Go to: https://cloud.mongodb.com → Clusters → Connect → Connect your application
MDB_MCP_CONNECTION_STRING=mongodb+srv://username:password@cluster.mongodb.net/database

# Alternative MongoDB API Keys (if preferred)
# Get these from https://cloud.mongodb.com/v2#/account/apiKeys
# MDB_MCP_API_CLIENT_ID=your_api_client_id
# MDB_MCP_API_CLIENT_SECRET=your_api_client_secret

# Oracle Connection Configuration (Database C)
# Format: user/password@host:port/service_name
# Example: hr/hr@localhost:1521/XEPDB1
ORACLE_MCP_CONNECTION_STRING=user/password@host:port/service_name

# Alternative Oracle connection format
# ORACLE_MCP_CONNECTION_STRING=oracle+cx_oracle://user:password@host:port/service_name

# Application Configuration
LOG_LEVEL=INFO
DEBUG_MODE=FALSE
MAX_QUERY_RESULTS=1000
QUERY_TIMEOUT=60

# Security Configuration
ENABLE_AUTHENTICATION=FALSE
API_KEY_REQUIRED=FALSE
CORS_ORIGINS=*

# Chat UI Configuration
CHAT_UI_TITLE=Multi-Database Agent
CHAT_UI_DESCRIPTION=Query MongoDB and Oracle databases through AI
ENABLE_CHAT_HISTORY=TRUE
MAX_CHAT_HISTORY=50
